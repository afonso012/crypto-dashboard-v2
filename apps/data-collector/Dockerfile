FROM node:20-alpine AS builder

WORKDIR /usr/src/app

RUN npm install -g pnpm

COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./

COPY apps/data-collector/package.json ./apps/data-collector/
COPY libs ./libs

RUN pnpm install --frozen-lockfile

COPY . .

# Constr√≥i a app (Output vai para apps/data-collector/dist)
RUN pnpm --filter data-collector build

# --- Production Stage ---
FROM node:20-alpine

WORKDIR /usr/src/app

RUN npm install -g pnpm

COPY --from=builder /usr/src/app/package.json ./
COPY --from=builder /usr/src/app/pnpm-lock.yaml ./
COPY --from=builder /usr/src/app/node_modules ./node_modules

# üî• CORRE√á√ÉO: Copiar o dist da pasta ESPEC√çFICA da app
COPY --from=builder /usr/src/app/apps/data-collector/dist ./dist

# üî• CORRE√á√ÉO: Ajustar o caminho do main
CMD ["node", "dist/main"]