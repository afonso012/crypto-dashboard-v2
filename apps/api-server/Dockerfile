# Usa uma imagem base com pnpm ativado
FROM node:20-alpine AS base
ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"
RUN corepack enable

# Etapa de Constru√ß√£o
FROM base AS builder
WORKDIR /app
COPY . .
# Instala TUDO (necess√°rio para o build)
RUN pnpm install --frozen-lockfile
# Compila o c√≥digo
RUN pnpm --filter api-server build
# üî• A MAGIA: Cria uma pasta /prod/api-server pronta para produ√ß√£o
# Isto isola as depend√™ncias e remove o que n√£o √© necess√°rio
RUN pnpm --filter api-server deploy --prod /prod/api-server

# Etapa Final (Runner)
FROM base AS runner
WORKDIR /app

# 1. Copia a aplica√ß√£o preparada (j√° traz os node_modules corretos!)
COPY --from=builder /prod/api-server ./

# 2. Copia o c√≥digo compilado (dist) que cri√°mos no builder
COPY --from=builder /app/apps/api-server/dist ./dist

CMD ["node", "dist/main.js"]