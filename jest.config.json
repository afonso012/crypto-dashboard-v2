{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": ["**/*.(t|j)s"],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": ["<rootDir>/libs/", "<rootDir>/apps/"],
    "moduleNameMapper": {
      "^@app/technical-analysis(|/.*)$": "<rootDir>/libs/technical-analysis/src/$1"
    }
  }